{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/stats.schema.json",
  "title": "ParsingStats",
  "type": "object",
  "required": [
    "parse_time_s",
    "lines_total",
    "tables_emitted",
    "captions_extracted",
    "chunks_n",
    "avg_tokens",
    "noise_ratio",
    "skipped_tables_n"
  ],
  "properties": {
    "parse_time_s": {"type": "number", "minimum": 0},
    "lines_total": {"type": "integer", "minimum": 0},
    "tables_emitted": {"type": "integer", "minimum": 0},
    "captions_extracted": {"type": "integer", "minimum": 0},
    "chunks_n": {"type": "integer", "minimum": 0},
    "avg_tokens": {"type": "number", "minimum": 0},
    "noise_ratio": {"type": "number", "minimum": 0, "maximum": 1},
    "skipped_tables_n": {"type": "integer", "minimum": 0}
  }
}
